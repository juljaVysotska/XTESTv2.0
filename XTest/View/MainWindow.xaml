<Window x:Class="XTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="645" Width="960">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="614" VerticalAlignment="Top" Width="255" Background="#FFE5E5E5" RenderTransformOrigin="0.5,0.5">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="3"/>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>

        <Label Content="Систематические коды" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FF8995AC"/>
        <Label Content="Код Варшамова" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="225"/>
        <Label Content="Код Еллаеса" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top" Width="225"/>
        <Label Content="Код Рида-Маллера" HorizontalAlignment="Left" Margin="10,93,0,0" VerticalAlignment="Top" Width="225"/>
        <Label Content="Код Хемминга" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top" Width="225"/>
        <Label Content="Цыклические коды" HorizontalAlignment="Left" Margin="10,162,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FF8995AC"/>
        <Label Content="Коды Абрамсона" HorizontalAlignment="Left" Margin="10,193,0,0" VerticalAlignment="Top" Width="225"/>
        <Label Content="Код Файра" HorizontalAlignment="Left" Margin="10,219,0,0" VerticalAlignment="Top" Width="225"/>
        <Label Content="Код Хемминга" HorizontalAlignment="Left" Margin="10,245,0,0" VerticalAlignment="Top" Width="225"/>
        <Label Content="Код БЧХ" HorizontalAlignment="Left" Margin="10,271,0,0" VerticalAlignment="Top" Width="225"/>
        <Label Content="Недвоичные коды" HorizontalAlignment="Left" Margin="10,319,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FF8995AC"/>
        <Label Content="Первичные недвоичные коды" HorizontalAlignment="Left" Margin="10,350,0,0" VerticalAlignment="Top" Width="225"/>
        <Label Content="Код с проверкой по |p|" HorizontalAlignment="Left" Margin="10,376,0,0" VerticalAlignment="Top" Width="225"/>
        <Label Content="Код с простым повторением" HorizontalAlignment="Left" Margin="10,402,0,0" VerticalAlignment="Top" Width="225"/>
        <Label Content="Итеративный код" HorizontalAlignment="Left" Margin="10,428,0,0" VerticalAlignment="Top" Width="225"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="614" Margin="255,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="697"/>

    </Grid>
</Window>
