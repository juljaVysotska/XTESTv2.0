                                <TabControl Name="codeRM_control" HorizontalAlignment="Left" Height="531" VerticalAlignment="Top" Width="655" Margin="0,50,0,0" >
                                    <TabItem Name ="codeRM_item"  Header="Code" Visibility="Collapsed">
