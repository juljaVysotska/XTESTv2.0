        <Label Content="Недвоичные коды" HorizontalAlignment="Left" Margin="24,372,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FF8995AC"/>

        <TabControl HorizontalAlignment="Left" HorizontalContentAlignment="Left" Width="950" TabStripPlacement="Left" SelectionChanged="TabControl_SelectionChanged_1" >
            <Grid>
                
            </Grid>
            <TabItem  Header="Код Варшамова" Height="35" Width="255"  Margin="-5,0,1,-70" Padding="30,0,0,0"
                      Background="#FFF5F7F9" BorderBrush="#FFF5F7F9" TextOptions.TextHintingMode="Fixed" FontSize="14" Foreground="Black">
                <Grid>
                    <Label Content="Пример1" HorizontalAlignment="Left" Margin="300,195,0,0" VerticalAlignment="Top" Foreground="#FF090F93" FontSize="24" Background="White"/>
                </Grid>
            </TabItem>

            <TabItem Header="Код Еллаеса" Height="35" Width="255" Margin="-3,14,3,-14" Padding="30,0,0,0" Background="#FFF5F7F9" BorderBrush="#FFF5F7F9">
                <Grid>
                    <Label Content="Пример2" HorizontalAlignment="Left" Margin="300,195,0,0" VerticalAlignment="Top" Foreground="#FFDC2A2A" FontSize="24"/>
                </Grid>
            </TabItem>

            <TabItem Header="Код Рида-Маллера" Height="35" Width="255" Margin="-3,13,3,-14" Padding="30,0,0,0" BorderBrush="#FFF5F7F9" Background="#FFF5F7F9"/>
            <TabItem Header="Код Хемминга" Height="35" Width="255" Margin="-3,10,3,-10" Padding="30,0,0,0"  Background="#FFF5F7F9" BorderBrush="#FFF5F7F9"/>
