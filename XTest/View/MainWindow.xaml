        <local:CheckByQViewModel x:Key="checkByQVM"></local:CheckByQViewModel>
        <local:RepeatCodeViewModel x:Key="repeatCodeVM"></local:RepeatCodeViewModel>
        <local:AbramsonaCodeViewModel x:Key="abramsonaCodeVM"></local:AbramsonaCodeViewModel>
